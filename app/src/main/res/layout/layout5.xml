<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/babyBlue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout5">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="@dimen/largeLength"
        android:layout_height="@dimen/smallLength"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/layoutLabel5"
        android:background="@color/darkBlue"
        android:textColor="@color/white"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/MATCHCONSTRAINT"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button"
        android:orientation="vertical"
        android:background="@color/navyBlue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/longQuotes"
            android:textSize="20dp"
            android:textColor="@color/white"/>
    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/largeLength"
        android:layout_height="@dimen/smallLength"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/babyBlue"
        android:text="Randomize layout!"
        android:onClick="randomize"/>
</androidx.constraintlayout.widget.ConstraintLayout>